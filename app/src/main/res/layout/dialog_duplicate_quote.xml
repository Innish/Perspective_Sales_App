<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_rounded"
    tools:context="uk.co.perspective.app.dialogs.CopyQuoteDialog">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/item_detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@+id/taskLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:minWidth="400dp"
        tools:context="uk.co.perspective.app.dialogs.NewTaskDialog">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Create Copy"
            android:background="@drawable/text_input_background"
            android:backgroundTint="#696969"
            android:textColor="#fff"
            android:textAlignment="center"
            android:padding="6dp"
            android:textSize="16sp"> </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Use this facility to create a copy of this quote/estimate. All the details from this record will be copied over to a new one but you can change the customer, subject &amp; notes details below if you want to."
            android:textColor="#A3A3A3"
            android:padding="3dp"
            android:textSize="14sp"> </TextView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/customer_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingBottom="10dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/customer_details_background_small">

            <TextView
                android:id="@+id/customer_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap to add a customer"
                android:textColor="#5E5E5E"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/contact_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="No Contact"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/customer_name_label" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:autofillHints="Subject"
            android:hint="Subject"
            android:textColorHint="#C6C6C6"
            android:inputType="textCapWords"
            android:textColorHighlight="#ECECEC"
            android:background="@drawable/text_input_background"
            android:textCursorDrawable="@null"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:autofillHints="Notes"
            android:hint="Notes"
            android:lines="3"
            android:gravity="start|top"
            android:inputType="textMultiLine|textCapSentences"
            android:textColorHint="#C6C6C6"
            android:textColorHighlight="#ECECEC"
            android:background="@drawable/text_input_background"
            android:textCursorDrawable="@null"
            android:imeOptions="actionDone"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/actionholder"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/save"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_ok"
                android:layout_weight="1"
                android:theme="@style/FlatButtonStyle"
                android:textColor="@color/colorPrimary"/>

            <Button
                android:id="@+id/cancel"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_cancel"
                android:layout_weight="1"
                android:theme="@style/FlatButtonStyle"
                android:textColor="@color/colorPrimary"/>


        </LinearLayout>

    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>