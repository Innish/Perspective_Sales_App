<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="10dp"
    android:paddingLeft="12dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/actionholder">

    <TextView
        android:id="@+id/initials"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="IS"
        android:textAlignment="center"
        android:paddingTop="6dp"
        android:background="@drawable/contact_initials"
        android:backgroundTint="#039BE5"
        android:textColor="#fff"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/initials"
        android:text="Innish Seeds"
        android:layout_marginTop="5dp"
        android:textAlignment="viewStart"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/customer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/contact_name"
        android:layout_alignStart="@+id/contact_name"
        android:fontFamily="sans-serif-medium"
        android:text="Perspective Software"
        android:textAlignment="viewStart"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/telephone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/customer_name"
        android:layout_alignStart="@+id/customer_name"
        android:text="01522 689078"
        android:textAlignment="viewStart"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/mobile_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/telephone_number"
        android:layout_marginStart="3dp"
        android:layout_toEndOf="@+id/mobile_icon"
        android:text="07808926858"
        android:textAlignment="viewStart"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/email_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/mobile_number"
        android:layout_alignStart="@+id/customer_name"
        android:text="innish@perspectivesoftware.co.uk"
        android:textAlignment="viewStart"
        android:textSize="10sp" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="3dp"
        android:layout_alignTop="@+id/telephone_number"
        android:layout_alignEnd="@+id/initials"
        android:src="@drawable/ic_phone" />

    <ImageView
        android:id="@+id/mobile_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignTop="@+id/telephone_number"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/telephone_number"
        android:src="@drawable/ic_mobile" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="3dp"
        android:layout_alignTop="@+id/email_address"
        android:layout_alignEnd="@+id/initials"
        android:src="@drawable/ic_email" />

</RelativeLayout>