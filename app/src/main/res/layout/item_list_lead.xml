<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="10dp"
    android:paddingLeft="12dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/status"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/contact_initials"
        android:backgroundTint="#EC5605"
        android:paddingTop="8dp"
        android:textAlignment="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lead_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/status"
        android:text="Secure Containment"
        android:textAlignment="viewStart"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/customer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/lead_name"
        android:layout_alignStart="@+id/lead_name"
        android:fontFamily="sans-serif-medium"
        android:text="Umbrella Corporation"
        android:textColor="#2C6AA1"
        android:textAlignment="viewStart"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lead_stage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/customer_name"
        android:layout_alignStart="@+id/lead_name"
        android:fontFamily="sans-serif-medium"
        android:text="New (No Contact)"
        android:textAlignment="viewStart"
        android:textColor="#039BE5"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/lead_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/lead_stage"
        android:layout_alignStart="@+id/lead_name"
        android:fontFamily="sans-serif-medium"
        android:text="Â£15,000.00"
        android:textAlignment="viewStart"
        android:textColor="#72A6BF"
        android:textSize="14sp" />



</RelativeLayout>